@import '../../global.styl'

.record
  display flex

  justify-content space-between
  align-items center

  padding 10px 20px
  margin 10px 0

  border-radius 100px

  background gradient-light-green-to-turquoise
  color color-white

  &__name
    position relative

    overflow hidden
    text-overflow ellipsis
    white-space nowrap

    max-width 200px

    flex-basis 200px

  &__delete
    opacity 0.5

    padding 5px

    border none
    border-radius 50px

    background transparent

    transition 0.1s

    &:hover
      opacity 1

      cursor pointer

  &__delete-icon
    width 20px
    height 20px